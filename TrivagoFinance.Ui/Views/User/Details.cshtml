@model TrivagoFinance.Ui.ViewModels.UserVIewModel

@{
    ViewData["Title"] = "Details Page";
    var photoPath = Url.Content("~/images/users/" + (Model.PhotoPath ?? "noimage.jpg"));
}

<Div class="row justify-content-center m-2">
    <div class="col">
        <h1>Details</h1>
        <div class="card">

            <div class="card-header">
                <h1>@Model.FirstName</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                <h4>Email: @Model.Email</h4>
                <h4>Full Name :@Model.FirstName  @Model.LastName</h4>
                <h4>Department : @Model.Department</h4>
            </div>

            <div class="card-footer text-center">
                <form method="post" asp-action="TeamLeadApproval" asp-controller="User">
                    <div class="form-group">
                        <label style="color:green">Approve</label>
                        <input type="radio" asp-for="AproveStatus" asp-action="TeamLead" asp-controller="User" value="True"/>
                        <span class="col-1"></span>
                        <label style="color:red">Reject</label>
                        <input type="radio" asp-for="AproveStatus" asp-action="TeamLead" asp-controller="User" value="False" />
                    </div>

                 
                    <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</Div>