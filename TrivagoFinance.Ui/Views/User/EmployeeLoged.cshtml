@model UserVIewModel
@{
    ViewData["Title"] = "EmployeeLoged";
}

<div class="row" style="text-align:center">
    <div class="col">
        <h1>Welcome @Model.FirstName </h1>
    </div>
</div>

<div class="row" style="text-align:center">
    <div class="col">
        @if (Model.UserRole == UserRoles.Employee)
        {
            <h3>Upload Photo</h3>
            <img src="~/images/image.png" class="rounded img-fluid" />
            <form enctype="multipart/form-data" asp-action="UploadPhoto" asp-controller="User" method="post" class="mt-3">
                <div class="custom-file">
                    <label class="custom-file-label">Choose Photo...</label>
                    <input asp-for="Photo" class="form-control custom-file-input" />
                </div>
                <p></p>
                <button type="submit" class="btn btn-primary">Send Photo</button>
            </form>
        }

        @if (Model.UserRole == UserRoles.TeamLead)
        {
            <h3>Hi, Team Lead @Model.FirstName</h3>
        }


        @if (Model.UserRole == UserRoles.Finance)
        {
            <h3>Hi, Finance @Model.FirstName</h3>
        }
    </div>

</div>

<script type="text/javascript">
    $(function () {
        $(".custom-file-input").on("change", function () {
            let fileName = $(this).val().split("\\").pop();
            $(".custom-file-label").html(fileName);
        });
    }); 
</script>