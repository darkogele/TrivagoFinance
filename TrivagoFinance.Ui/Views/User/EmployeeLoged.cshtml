@model TrivagoFinance.Ui.ViewModels.UserVIewModel
@{
    ViewData["Title"] = "EmployeeLoged"; 
    var photoPath = Url.Content("~/images/users/" + (Model.PhotoPath ?? "noimage.jpg"));
}

<div class="row" style="text-align:center">
    <div class="col">
        <h1>Welcome @Model.FirstName </h1>
    </div>
</div>

<div class="row" style="text-align:center">
    <div class="col">
        @if (Model.UserRole == TrivagoFinance.Ui.ViewModels.UserRoles.Employee)
        {
            <h3>Upload Photo</h3>
            <img src="@photoPath" class="rounded img-fluid"  asp-append-version="true"/>
            <form enctype="multipart/form-data" asp-action="UploadPhoto" asp-controller="User" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <div class="custom-file">
                    <label class="custom-file-label">Choose Photo...</label>
                    <input asp-for="Photo" class="form-control custom-file-input" />
                </div>
                <p></p>
                <button type="submit" class="btn btn-primary">Send Photo</button>
            </form>
        }      
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $(".custom-file-input").on("change", function () {
            let fileName = $(this).val().split("\\").pop();
            $(".custom-file-label").html(fileName);
        });
    }); 
</script>